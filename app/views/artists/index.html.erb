
<div class = "artist-button">
<%= button_to "New Artist", new_artist_path, :method => :get %>
</div>

<!-- <div class="row" id="show-button">Click to see artists!</div> -->
<div id="artists-div">
	<ul id = "artist-list">
	<% @artists.each do |artist| %>
		<li>
			<h3 class="artist-name">
			<%= artist.name %>
			</h3>
			<p>Number of albums: <%= artist.number_of_albums %></p>

		</li>
			<% end %>

	</ul>

</div>
<br>